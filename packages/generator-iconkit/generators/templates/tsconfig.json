{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "declarationDir": "lib/types",
    "outDir": "lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src", "custom.d.ts"],
  "exclude": ["lib","types"]
}
